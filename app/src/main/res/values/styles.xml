<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar.TransparentStatusBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoadingDialogTheme">
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowFrame">@null</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:backgroundDimEnabled">true</item>-->
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.TransparentStatusBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="txt_lab" >
        <!-- 默认状态提示颜色和字体-->
        <item name="android:textColorHint">#9f9ea4</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>

        <!-- 下面可以根据需要设置，如果没有将默认使用默认theme的颜色 -->
        <!-- Label标签的颜色 -->
        <item name="colorAccent">#9f9ea4</item>
        <!-- 默认状态状态设置底线颜色 -->
        <!--<item name="colorControlNormal">#3F51b5</item>-->
        <!-- 选择的底线颜色 -->
        <!--<item name="colorControlActivated">#c6174e</item>-->
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:background">@android:color/transparent</item>
    </style>



</resources>
