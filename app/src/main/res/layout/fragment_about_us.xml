<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#31354A"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/title_img"
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/about_title_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="28dp"
                    android:text="关于新威风出行"
                    android:textColor="@color/white"
                    android:textSize="19sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="ABOUT US"
                    android:textColor="@color/white_transparent"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_about1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="26dp"
                    android:alpha="0.5"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/about1"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_about2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="26dp"
                    android:alpha="0.5"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/about2"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_about3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="26dp"
                    android:alpha="0.5"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/about2"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_about4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginBottom="80dp"
                    android:alpha="0.5"
                    android:lineSpacingExtra="4dp"
                    android:text="@string/about4"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <!--<ImageView
                android:id="@+id/title_bg"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:background="@mipmap/title_bg" />-->

            <RelativeLayout
                android:id="@+id/title_function_area"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:src="@mipmap/back_icon" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="关于我们"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <!--<ImageView
                    android:id="@+id/iv_right"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:src="@mipmap/share_app_icon" />-->
            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>